{
  "build": {
    "content": [
      {
        "src": "source/api",
        "files": [
          "**/*.yml"
        ],
        "dest": "api"
      },
      {
        "src": "source",
        "files": [ 
          "*.md", 
          "toc.yml",
          "docs/**/*.md",
          "docs/**/toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "src": "source",
        "files": [
          "images/**",
          "favicons/**"
        ]
      }
    ],

    "overwrite": {
      "src": "source",
      "files": [
        "overwrites/**/*.md",
        "disclaimers/*.md"

      ]
    },
    "template": [
      "default",
      "source/template"
    ],
    "dest": "output/site",
    "globalMetadata": {
      "_appTitle": "NUKE",
      "_enableSearch": true,
      "_disableBreadcrumb": true,
      "_gitContribute": {
        "branch": "develop",
        "apiSpecFolder": "source/overwrites"
      }
    },
    "noLangKeyword": false,
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]

  }
}
